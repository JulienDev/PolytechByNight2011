<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="#0f1a23" android:orientation="vertical">

	<include android:layout_width="fill_parent"
		android:layout_height="wrap_content" layout="@layout/en_tete" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="@drawable/bg_generique">

		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/bg_salles"
			android:layout_marginTop="53dp">

			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/salle_cuba"
				android:id="@+id/ivSalleCuba" android:layout_marginLeft="54dp"
				android:layout_marginTop="125dp"></ImageView>

			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/salle_st_petersbourg"
				android:id="@+id/ivSalleStPetersbourg" android:layout_marginLeft="170dp"
				android:layout_marginTop="40dp"></ImageView>

			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/salle_st_tropez"
				android:id="@+id/ivSalleStTropez" android:layout_marginLeft="148dp"
				android:layout_marginTop="93dp"></ImageView>

			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/salle_japon"
				android:id="@+id/ivSalleJapon" android:layout_marginLeft="245dp"
				android:layout_marginTop="100dp"></ImageView>

			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/salle_cabine_capitaine"
				android:id="@+id/ivSalleCabineCapitaine" android:layout_marginLeft="15dp"
				android:layout_marginTop="230dp"></ImageView>

			<!-- <ImageView android:layout_height="wrap_content" -->
			<!-- android:layout_width="wrap_content" android:src="@drawable/salle_pont" -->
			<!-- android:id="@+id/ivSallePont" android:layout_marginLeft="115dp" -->
			<!-- android:layout_marginTop="240dp"></ImageView> -->

			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/salle_casino"
				android:id="@+id/ivSalleCasino" android:layout_marginLeft="240dp"
				android:layout_marginTop="250dp"></ImageView>

			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/salle_machines"
				android:id="@+id/ivSalleMachines" android:layout_marginLeft="25dp"
				android:layout_marginTop="295dp"></ImageView>

			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/salle_cale_pirates"
				android:id="@+id/ivSalleCalePirates" android:layout_marginLeft="155dp"
				android:layout_marginTop="298dp"></ImageView>

			<ImageView android:layout_width="wrap_content"
				android:id="@+id/ivSalleSuitePresidentielle" android:layout_height="wrap_content"
				android:src="@drawable/salle_suite_presidentielle"
				android:layout_marginTop="195dp" android:layout_marginLeft="50dp"></ImageView>

			<ImageView android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:src="@drawable/salle_pont"
				android:id="@+id/ivSallePont" android:layout_marginLeft="115dp"
				android:layout_marginTop="240dp"></ImageView>

			<ImageView android:layout_width="wrap_content" android:id="@+id/ivSalleAbysses"
				android:layout_height="wrap_content" android:src="@drawable/salle_abysse_salle"
				android:layout_alignTop="@+id/ivSalleStPetersbourg"
				android:layout_marginTop="10dp" android:layout_marginLeft="15dp"></ImageView>

			<ImageView android:layout_width="wrap_content" android:id="@+id/ivSalleMiami"
				android:layout_height="wrap_content" android:src="@drawable/salle_discocotier"
				android:layout_marginTop="90dp" android:layout_alignParentLeft="true"></ImageView>

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>