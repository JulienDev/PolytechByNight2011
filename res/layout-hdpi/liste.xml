<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="#0f1a23" android:orientation="vertical">

	<include android:layout_width="fill_parent"
		android:layout_height="wrap_content" layout="@layout/en_tete" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="@drawable/bg_generique_halo">

		<ListView android:id="@android:id/list" android:layout_width="fill_parent"
			android:background="#00000000" android:cacheColorHint="#00000000"
			android:layout_height="fill_parent" android:dividerHeight="0px" />

		<TextView android:id="@+id/tvInfo" android:layout_width="fill_parent"
			android:textSize="18dp" android:layout_height="wrap_content"
			android:visibility="gone" android:layout_gravity="bottom"
			android:layout_marginBottom="12dp" android:gravity="center"></TextView>

	</LinearLayout>
	
	

</LinearLayout>